<h1>Listing Transactions</h1>
<%= link_to 'New Transaction', new_transaction_path %>
<table>
  <tr>
    <th>entity_id</th>
    <th>matching_service_entity_id</th>
    <th>simple_id</th>
    <th>levels_of_assurance</th>
    <th>assertion_consumer_service_uri</th>
    <th>service_homepage</th>
    <th>signing_cert</th>
    <th>eidas_enabled</th>
    <th colspan="3"></th>
  </tr>

  <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.entity_id %></td>
        <td><%= transaction.matching_service_entity_id %></td>
        <td><%= transaction.simple_id %></td>
        <td><%= transaction.levels_of_assurance %></td>
        <td><%= transaction.assertion_consumer_service_uri %></td>
        <td><%= transaction.service_homepage %></td>
        <td><%= transaction.signing_cert %></td>
        <td><%= transaction.eidas_enabled %></td>
        <td><%= link_to 'Show', transaction_path(url_encode transaction.entity_id) %></td>
        <td><%= link_to 'Edit', edit_transaction_path(url_encode transaction.entity_id) %></td>
        <td><%= link_to 'Destroy', transaction_path(url_encode transaction.entity_id),
                        method: :delete,
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>