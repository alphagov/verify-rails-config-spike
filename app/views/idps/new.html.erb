
<%= form_for :idp, url: idps_path do |f| %>
    <p>
      <%= f.label :entity_id %><br>
      <%= f.text_field :entity_id %>
    </p>

    <p>
      <%= f.label :display_data %><br>
      <%= f.text_area :display_data %>
    </p>

    <p>
      <%= f.label :enabled %><br>
      <%= f.check_box :enabled %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>